@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@{
    int i = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Fashion | Teamplate</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="Content/img/favicon.ico">

    <link rel="stylesheet" href="Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="Content/css/style.css">
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/all.css'>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/fontawesome.css'>

    <script src="tinymce/tinymce.min.js"></script>
    <script src="Content/js/tinyMCE.js"></script>
</head>
<body class="full-wrapper">

    @Html.Partial("/Views/_header.cshtml")
    <main>
        <div class="container">
        <h1 style="text-align: center;color: purple;margin-top: 40px">Notification</h1>
        <div class="d-inline-flex p-2">
                @foreach (var item in ViewBag.notList)
                {
                    <div class="card" style="margin-bottom: 20px;border-left-width:5px;padding: 10px;border-top-width: 0px;border-right-width: 0px;border-bottom-width: 0px;">
                        <div class="card-body">
                            @item.Content
                        </div>
                        <div class="card-footer text-muted">
                            @item.CreateOn
                        </div>
                    </div>
                }
      </div>
        
        </div>
    </main>


</body>
</html>
