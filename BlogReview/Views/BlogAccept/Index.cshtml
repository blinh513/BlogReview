@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@{
    int i = 1;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Fashion | Teamplate</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="manifest" href="site.webmanifest">
    <link rel="shortcut icon" type="image/x-icon" href="Content/img/favicon.ico">

    <link rel="stylesheet" href="Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="Content/css/style.css">
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/all.css'>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/fontawesome.css'>

    <script src="tinymce/tinymce.min.js"></script>
    <script src="Content/js/tinyMCE.js"></script>
</head>
<body class="full-wrapper">

    @Html.Partial("/Views/_header.cshtml")
    <main>
        <h1 style="text-align: center;color: purple;margin-top: 40px">Manage Blog Accept</h1>
        <div class="container">
            <div class="row">
                <div class="col"></div>
                <div class="col-6">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Blog Name</th>
                                <th scope="col">Blog Description</th>
                                <th scope="col">Role</th>
                                <th scope="col">Name User</th>
                                <th scope="col">Function</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.logList)
                            {
                                <tr>
                                    <th scope="row">@i</th>
                                    @{
                                        i++;
                                    }
                                    <td>@item.BlogName</td>
                                    <td>@item.BlogDescription</td>
                                    <td>@ViewBag.userDAO.getRoleNameByRoleID(ViewBag.userDAO.getUserByID(item.UserId).RoleId)</td>
                                    <td>@ViewBag.userDAO.getUserByID(item.UserId).NameDisplay</td>
                                    <td><a href="ViewBlogDetail?id=@item.BlogId" class="btn" style="padding: 20px;">View Detail</a></td>
                                    <td><a href="BlogAccept/Change?id=@item.BlogId" class="btn" style="padding: 20px;">Change Pending</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

</body>
</html>
